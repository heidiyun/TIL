<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/nameText" android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="111dp" tools:layout_editor_absoluteX="152dp"/>

    <TextView
            android:id="@+id/emailText" android:layout_width="3dp" android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="177dp" tools:layout_editor_absoluteX="152dp"/>


</android.support.constraint.ConstraintLayout>